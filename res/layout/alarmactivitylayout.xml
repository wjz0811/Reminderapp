<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/globalpattern_background" >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:background="#32343A"
                android:padding="10dp"
                android:text="Medicine"
                android:textColor="#FFFFFF"
                />

        <EditText
            android:id="@+id/medicineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="0dp"
            android:hint="Name of your medicine"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textSize="15dp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:background="#32343A"
                android:padding="10dp"
                android:text="Reminders"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:columnCount="2"
            android:padding="10dp" >

            <CheckBox

                    android:textSize="15dp"
                    android:layout_gravity="fill_horizontal"
                    android:text="Monday"
                    android:id="@+id/mondayCheckBox"
                    android:padding="5dp"
               />

            <EditText
                    android:id="@+id/mondayTime"
                    android:textColor="#ffffff"

                    android:textSize="15dp"
                    android:clickable="false"
                    android:layout_gravity="fill_horizontal"
                    
                    android:inputType="time"
                    android:hint="HH:MM AM/PM"
                    />

            <CheckBox
            
                    android:textSize="15dp"
                    android:layout_gravity="fill_horizontal"
                    android:text="Tuesday"
                    android:id="@+id/tuesdayCheckBox"
                    android:padding="5dp"/>

            <EditText
                    android:id="@+id/tuesdayTime"
                    android:textColor="#663300"
               
                    android:textSize="15dp"
                    android:layout_gravity="fill_horizontal"
                    
                    android:inputType="time"
                    android:hint="HH:MM AM/PM"
                    
                    />

            <CheckBox
                    android:textSize="15dp"
                    android:layout_gravity="fill_horizontal"
                    android:text="Wednesday"
                    android:id="@+id/wednesdayCheckBox"
                    android:padding="5dp"/>

            <EditText
                    android:id="@+id/wednesdayTime"
                    android:textColor="#663300"      
                    android:textSize="15dp"
                    android:layout_gravity="fill_horizontal"                
                    android:inputType="time"
                    android:hint="HH:MM AM/PM"
               
                    />

            <CheckBox    
                    android:textSize="15dp"
                    android:layout_gravity="fill_horizontal"
                    android:text="Thursday"
                    android:id="@+id/thursdayCheckBox"
                    android:padding="5dp"/>

            <EditText
                    android:textSize="15dp"
                    android:id="@+id/thursdayTime"        
                    android:layout_gravity="fill_horizontal"              
                    android:inputType="time"
                    android:hint="HH:MM AM/PM"
                 
                    />

            <CheckBox
                    android:layout_gravity="fill_horizontal"
                    android:textSize="15dp"
                    android:text="Friday"
                    android:id="@+id/fridayCheckBox"
                    android:padding="5dp"/>

            <EditText  
                    android:id="@+id/fridayTime"
                    android:layout_gravity="fill_horizontal"                  
                    android:inputType="time"
                    android:hint="HH:MM AM/PM"
                    android:textSize="15dp"
                    />

            <CheckBox 
                    android:layout_gravity="fill_horizontal"
                    android:text="Saturday"
                    android:textSize="15dp"
                    android:id="@+id/saturdayCheckBox"
                    android:padding="5dp"/>

            <EditText
                    android:id="@+id/saturdayTime"
                    android:textSize="15dp"
                    android:layout_gravity="fill_horizontal"                  
                    android:inputType="time"
                    android:hint="HH:MM AM/PM"                   
                   />

            <CheckBox
                    android:textSize="15dp"
                    android:layout_gravity="fill_horizontal"
                    android:text="Sunday"
                    android:id="@+id/sundayCheckBox"
                    android:padding="5dp"/>

            <EditText
                    android:id="@+id/sundayTime"
                    android:textSize="15dp"
                    android:layout_gravity="fill_horizontal"                  
                    android:inputType="time"
                    android:hint="HH:MM AM/PM"
                   />
        </GridLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submitbutton"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:background="#003e7c"
                android:text="Save"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>